<Window x:Class="UWActuallyWorks.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:views="clr-namespace:JobBrowserModule.Views;assembly=JobBrowserModule"
        Title="UWActuallyWorks" Height="768" Width="1366">
    
    <Window.Resources>
        <BitmapImage x:Key="RefreshIcon" UriSource="/JobBrowserModule;Component/Icons/Sync.png" />
        <BitmapImage x:Key="WaterlooIcon" UriSource="/JobBrowserModule;Component/Icons/Waterloo.png" />
        <BitmapImage x:Key="TableIcon" UriSource="/JobBrowserModule;Component/Icons/Grid.png" />
        <BitmapImage x:Key="MapIcon" UriSource="/JobBrowserModule;Component/Icons/Location.png" />
        <BitmapImage x:Key="OptionsIcon" UriSource="/JobBrowserModule;Component/Icons/Gear.png" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Name="RefreshButton" Height="40" Width="40" Margin="5" Background="Transparent"
                    BorderBrush="Transparent" BorderThickness="0">
                <Image Source="{StaticResource RefreshIcon}"/>
            </Button>
            <Label Grid.Column="1" Name="CurrentPerspectiveLabel" Height="40" Width="130" HorizontalAlignment="Left" Margin="5"></Label>
            <TextBlock Grid.Column="2" Name="MessageTextBlock" Height="40" Width="Auto"></TextBlock>
            <DockPanel Grid.Column="3">
                <Button Name="ImportDataPerspectiveButton" Height="40" Width="40" Margin="5" Background="Transparent"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Image Source="{StaticResource WaterlooIcon}" />
                </Button>
                <Button Name="JobPostingPerspectiveButton" Height="40" Width="40" Margin="5" Background="Transparent"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Image Source="{StaticResource TableIcon}" />
                </Button>
                <Button Name="MapPerspectiveButton" Height="40" Width="40" Margin="5" Background="Transparent"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Image Source="{StaticResource MapIcon}" />
                </Button>
                <Button Name="OptionsPerspectiveButton" Height="40" Width="40" Margin="5" Background="Transparent"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Image Source="{StaticResource OptionsIcon}" />
                </Button>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <views:FilterPanelView Grid.Column="0" Name="FilterPanel"/>
            <views:PostingTableView Grid.Column="1" Name="JobPostingTable"/>
            <!--<ItemsControl  Grid.Column="0" Name="FilterPanel" prism:RegionManager.RegionName="FilterPanel"/>
            <ItemsControl  Grid.Column="1" Name="JobPostingTable" prism:RegionManager.RegionName="JobPostingTable"/>-->
        </Grid>
        <Grid Grid.Row="2"></Grid>
    </Grid>
</Window>
