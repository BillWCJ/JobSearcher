<Window x:Class="UWActuallyWorks.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:views="clr-namespace:JobBrowserModule.Views;assembly=JobBrowserModule"
        Title="UWActuallyWorks" Height="768" Width="1366">
    
    <Window.Resources>
        <BitmapImage x:Key="RefreshIcon" UriSource="/JobBrowserModule;Component/Icons/Sync.png" />
        <BitmapImage x:Key="WaterlooIcon" UriSource="/JobBrowserModule;Component/Icons/Waterloo.png" />
        <BitmapImage x:Key="TableIcon" UriSource="/JobBrowserModule;Component/Icons/Grid.png" />
        <BitmapImage x:Key="MapIcon" UriSource="/JobBrowserModule;Component/Icons/Location.png" />
        <BitmapImage x:Key="OptionsIcon" UriSource="/JobBrowserModule;Component/Icons/Gear.png" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="2" BorderBrush="DimGray" Margin="5" CornerRadius="2">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Name="RefreshButton" Height="Auto" Width="Auto" Margin="5" Background="Transparent"
                        BorderBrush="Transparent" BorderThickness="0">
                    <Image Source="{StaticResource RefreshIcon}" />
                </Button>
                <Label Grid.Column="1" Name="CurrentPerspectiveLabel" Height="Auto" Width="130"
                       HorizontalAlignment="Left" Margin="5">
                </Label>
                <TextBlock Grid.Column="2" Name="MessageTextBlock" Height="Auto" Width="Auto"></TextBlock>
                <StackPanel Orientation="Horizontal" Grid.Column="3">
                    <ToggleButton Name="ImportDataPerspectiveButton" Margin="5"
                            Background="Transparent"
                            BorderBrush="Transparent" BorderThickness="0">
                        <Image Source="{StaticResource WaterlooIcon}" />
                    </ToggleButton>
                    <ToggleButton Name="JobPostingPerspectiveButton" Margin="5"
                            Background="Transparent"
                            BorderBrush="Transparent" BorderThickness="0">
                        <Image Source="{StaticResource TableIcon}" />
                    </ToggleButton>
                    <ToggleButton Name="MapPerspectiveButton" Margin="5" Background="Transparent"
                            BorderBrush="Transparent" BorderThickness="0">
                        <Image Source="{StaticResource MapIcon}" />
                    </ToggleButton>
                    <ToggleButton Name="OptionsPerspectiveButton" Margin="5" Background="Transparent"
                            BorderBrush="Transparent" BorderThickness="0">
                        <Image Source="{StaticResource OptionsIcon}" />
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderThickness="2" BorderBrush="DimGray" Margin="5" CornerRadius="2">
                <views:FilterPanelView Name="FilterPanel" />
            </Border>
            <Border Grid.Column="1" BorderThickness="2" BorderBrush="DimGray" Margin="5" CornerRadius="2">
                <views:PostingTableView Name="JobPostingTable"/>
            </Border>
            <!--<ItemsControl  Grid.Column="0" Name="FilterPanel" prism:RegionManager.RegionName="FilterPanel"/>
            <ItemsControl  Grid.Column="1" Name="JobPostingTable" prism:RegionManager.RegionName="JobPostingTable"/>-->
        </Grid>
        <Border Grid.Row="2" BorderThickness="2" BorderBrush="DimGray" Margin="5" CornerRadius="2"></Border>
    </Grid>
</Window>
